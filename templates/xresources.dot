#define fg             {{=c.foreground}}
#define bg             {{=c.background}}
#define black          {{=c[0]}}
#define red            {{=c[1]}}
#define green          {{=c[2]}}
#define yellow         {{=c[3]}}
#define blue           {{=c[4]}}
#define magenta        {{=c[5]}}
#define cyan           {{=c[6]}}
#define white          {{=c[7]}}
#define bright_black   {{=c[8]}}
#define bright_red     {{=c[9]}}
#define bright_green   {{=c[10]}}
#define bright_yellow  {{=c[11]}}
#define bright_blue    {{=c[12]}}
#define bright_magenta {{=c[13]}}
#define bright_cyan    {{=c[14]}}
#define bright_white   {{=c[15]}}

! special
*.foreground:   fg
*.background:   bg
*.cursorColor:  fg

! black
*.color0:       black
*.color8:       bright_black

! red
*.color1:       red
*.color9:       bright_red

! green
*.color2:       green
*.color10:      bright_green

! yellow
*.color3:       yellow
*.color11:      bright_yellow

! blue
*.color4:       blue
*.color12:      bright_blue

! magenta
*.color5:       magenta
*.color13:      bright_magenta

! cyan
*.color6:       cyan
*.color14:      bright_cyan

! white
*.color7:       white
*.color15:      bright_white
