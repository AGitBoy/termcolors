#define foreground     {{=c.foreground.hex}}
#define background     {{=c.background.hex}}
#define black          {{=c[0].hex}}
#define red            {{=c[1].hex}}
#define green          {{=c[2].hex}}
#define yellow         {{=c[3].hex}}
#define blue           {{=c[4].hex}}
#define magenta        {{=c[5].hex}}
#define cyan           {{=c[6].hex}}
#define white          {{=c[7].hex}}
#define bright_black   {{=c[8].hex}}
#define bright_red     {{=c[9].hex}}
#define bright_green   {{=c[10].hex}}
#define bright_yellow  {{=c[11].hex}}
#define bright_blue    {{=c[12].hex}}
#define bright_magenta {{=c[13].hex}}
#define bright_cyan    {{=c[14].hex}}
#define bright_white   {{=c[15].hex}}

! special
*.foreground:   foreground
*.background:   background
*.cursorColor:  foreground

! black
*.color0:       black
*.color8:       bright_black

! red
*.color1:       red
*.color9:       bright_red

! green
*.color2:       green
*.color10:      bright_green

! yellow
*.color3:       yellow
*.color11:      bright_yellow

! blue
*.color4:       blue
*.color12:      bright_blue

! magenta
*.color5:       magenta
*.color13:      bright_magenta

! cyan
*.color6:       cyan
*.color14:      bright_cyan

! white
*.color7:       white
*.color15:      bright_white
